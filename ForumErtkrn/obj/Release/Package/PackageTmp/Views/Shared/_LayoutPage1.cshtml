<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />

    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="navbar navbar-default">
        <div class="navbar-brand col-md-2 col-xs-12">
            forum.ertkrn.com
        </div>
        <div class="search-container col-md-5 col-xs-12">
            <input type="text" placeholder="Arama yap..." name="search">
            <button type="submit">GO</button>
        </div>
        <div class="navbar-right col-md-4 col-xs-12">
            <a href="#" role="button">Giriş Yap</a>
            <a href="#" role="button">Kayıt Ol</a>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <div class="navbar navbar-default navbar-fixed-bottom hidden-lg hidden-md" id="footer">
        <div class="col-xs-3 text-center"><a href="#anasayfa" id="Anasayfa"><i class="glyphicon glyphicon-home"></i><br /><strong id="menuid">Anasayfa</strong></a></div>
        <div class="col-xs-2 text-center"><a href="#trendler" id="Trendler"><i class="glyphicon glyphicon-menu-hamburger"></i></a></div>
        <div class="col-xs-2 text-center"><a href="#postekle" id="Postekle"><i class="glyphicon glyphicon-plus"></i></a></div>
        <div class="col-xs-2 text-center"><a href="#search" id="Search"><i class="glyphicon glyphicon-search"></i></a></div>
        <div class="col-xs-2 text-center"><a href="#profil" id="Profil"><i class="glyphicon glyphicon-user"></i></a></div>
    </div>

    <script>
        setTimeout(function () {
            $('#footer').hide();
        }, 5000);

        window.addEventListener('touchstart', function () {
            $('#footer').removeAttr('style');
            setTimeout(function () {
            $('#footer').hide();
        }, 5000);
        });
    </script>

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/menu-degistir.js"></script>
</body>
</html>
